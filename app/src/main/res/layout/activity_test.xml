<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/new_design"
    tools:context="com.byteshaft.foodtruck.customer.TestActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/layout_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_group"
                android:layout_margin="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/support_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Support"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/support_text"
                    android:layout_marginTop="18dp"
                    android:text="@string/description_text"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_text"
                    android:layout_marginTop="10dp"
                    android:background="@android:drawable/edit_text"
                    android:hint="Your Name"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/subject_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_et"
                    android:layout_marginTop="10dp"
                    android:background="@android:drawable/edit_text"
                    android:hint="Subject/Title"
                    android:inputType="text"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subject_et"
                    android:layout_marginTop="10dp"
                    android:background="@android:drawable/edit_text"
                    android:gravity="top|left"
                    android:hint="Enter details here.."
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="Report a bug"
                    android:textAllCaps="false"
                    android:theme="@style/AppTheme.Button" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
