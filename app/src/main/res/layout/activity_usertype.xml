<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/find_truck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Find Food Truck"
        android:theme="@style/AppTheme.Button" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/truck_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/find_truck"
        android:layout_alignStart="@+id/find_truck"
        android:layout_below="@+id/find_truck"
        android:text="Truck Owner"
        android:theme="@style/AppTheme.Button" />
</RelativeLayout>
